@using PEPe.DataAccessModel;
@if (Session["user"] == null)
{
    Response.Redirect("~/");
}
else
{
    if (ViewBag.NomeUsuario == null)
    {
        ViewBag.UsuarioLogado = ((UsuarioLogadoModel)Session["user"]);
    }

    ViewBag.ClassDashBoard = string.Empty;
    ViewBag.ClassNovoAgendamento = string.Empty;
    ViewBag.ClassPainel = string.Empty;
    ViewBag.ClassCadastroVeiculos = string.Empty;
    ViewBag.ClassMotoristas = string.Empty;

    switch (HttpContext.Current.Request.Url.AbsolutePath.ToString())
    {
        case "/Logado/Home":
        case "/Logado/Home/Index":
            ViewBag.ClassDashBoard = " class=active ";
            break;
        case "/Logado/Agendamento/AgendamentoIncluir":
            ViewBag.ClassNovoAgendamento = " class=active ";
            break;
        case "/Logado/Agendamento/Painel":
            ViewBag.ClassPainel = " class=active ";
            break;
        case "/Logado/Veiculos/ConsultaVeiculos":
            ViewBag.ClassCadastroVeiculos = " class=active ";
            break;
        case "/Logado/Motorista/ConsultaMotoristas":
            ViewBag.ClassMotorista = " class=active ";
            break;
        default:
            break;
    }


}

